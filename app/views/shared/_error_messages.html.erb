<% if error_messages.errors.any? %>
  <div class="error_explanation">
    <h2>
      <%= pluralize error_messages.errors.count, "error" %>
      prohibited this house from being saved:
    </h2>

    <ul>
      <% error_messages.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
